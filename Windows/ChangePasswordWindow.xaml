<Window x:Class="CarShopApp.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Смена пароля" Height="300" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF4A90E2" Offset="0" />
                <GradientStop Color="#FF2B5673" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Текущий пароль:" FontSize="16" Margin="0,0,0,10" />
            <PasswordBox Name="CurrentPasswordBox" Margin="0,0,0,10" />

            <TextBlock Text="Новый пароль:" FontSize="16" Margin="0,0,0,10" />
            <PasswordBox Name="NewPasswordBox" Margin="0,0,0,10" />

            <TextBlock Text="Подтвердите пароль:" FontSize="16" Margin="0,0,0,10" />
            <PasswordBox Name="ConfirmPasswordBox" Margin="0,0,0,20" />

            <Button Content="Сменить пароль" Width="150" Height="40" Background="Blue" Foreground="White" Click="ChangePasswordButton_Click" />
        </StackPanel>
    </Grid>
</Window>
